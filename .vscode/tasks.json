{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${workspaceFolder}/*.c",
                "${workspaceFolder}/ex01/*.cpp",
                // "${workspaceFolder}/parsing/*/*/*.c",
                // "${workspaceFolder}/parsing/*/*.c",
                // "${workspaceFolder}/execution/*/*/*.c",
                // "${workspaceFolder}/execution/*/*.c",
                //"-Ofast",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-std=c++98",
                //"-fsanitize=address",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$c++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run with Valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
              "--leak-check=full",
              "--track-origins=yes",
              "--show-leak-kinds=all",
              "${workspaceFolder}/a.out"
            ],
            "dependsOn": ["Build Minishell"],
            "problemMatcher": []
          }
    ],
    "version": "2.0.0"
}